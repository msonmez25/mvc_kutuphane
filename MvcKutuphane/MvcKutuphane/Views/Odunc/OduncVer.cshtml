@model MvcKutuphane.Models.Entity.Tbl_Hareket

@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>ÖDÜNÇ KİTAP VERME SAYFASI</h2>

<form class="form-group" method="post">
    <div style="margin-top:15px">
        <label>PERSONEL AD SOYAD</label>
        @Html.DropDownListFor(k => k.Tbl_Personel.ID, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>ÜYE AD SOYAD</label>
        @Html.DropDownListFor(k => k.Tbl_Uyeler.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>KİTAP ADI</label>
        @Html.DropDownListFor(k => k.Tbl_Kitap.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>ALIŞ TARİHİ</label>
        <input type="text" class="form-control" name="ALISTARIH" value="@DateTime.Now.ToShortDateString()" />
    </div>
    <div style="margin-top:15px">
        <label>İADE TARİHİ</label>
        <input type="text" class="form-control" name="IADETARIH" value="@DateTime.Now.AddDays(3).ToShortDateString()"/>
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info" style="background-color:#64d8ca;color:black ">Ödünç Kitap Ver</button>
    </div>
</form>

