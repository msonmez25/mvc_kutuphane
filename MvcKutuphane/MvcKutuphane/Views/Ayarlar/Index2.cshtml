@using MvcKutuphane.Models.Entity
@model List<Tbl_Admin>

@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

<h2>ADMİN AYAR SAYFASI</h2>
<br />
<table id="tbl1" class="table table-bordered">
    <thead>
        <tr style="background-color: #e67e22">
            <th>ID</th>
            <th>AD</th>
            <th>SOYAD</th>
            <th>KULLANICI</th>
            <th>YETKİ</th>
            <th>SİL</th>
            <th>DÜZENLE</th>
        </tr>
    </thead>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.AD</td>
            <td>@x.SOYAD</td>
            <td>@x.KULLANICI</td>
            <td>@x.YETKI</td>
            <td>
                <a class="btn btn-success" href="/Ayarlar/AdminGetir/@x.ID">
                    Düzenle
                </a>
            </td>
            @*<td>
                    <a class="btn btn-danger btn-sm" href="/Ayarlar/AdminSil/@x.ID">
                        <i class="fas fa-trash">
                        </i>
                        Sil
                    </a>
                </td>*@
            <td>
                @Html.ActionLink("Sil", "AdminSil",
        new { id = x.ID },
        new
        {
        @class = "btn btn-danger",
        onclick = "return confirm('Silmek İstiyor musunuz?')"
        })
            </td>
        </tr>
    }
</table>
<br />
<button class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Yeni Admin Ekle</button>

<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Admin Ekleme Paneli</h2>
            </div>
            <form method="post" action="/Ayarlar/YeniAdmin/">
                <div class="modal-body">
                    <label>AD</label>
                    <input type="text" name="AD" class="form-control" />
                    <br />
                    <label>SOYAD</label>
                    <input type="text" name="SOYAD" class="form-control" />
                    <br />
                    <label>FOTOGRAF</label>
                    <input type="text" name="FOTOGRAF" class="form-control" />
                    <br />
                    <label>EĞİTİM</label>
                    <input type="text" name="EGITIM" class="form-control" />
                    <br />
                    <label>TELEFON</label>
                    <input type="text" name="TELEFON" class="form-control" />
                    <br />
                    <label>MAİL</label>
                    <input type="email" name="MAIL" class="form-control" />
                    <br />
                    <label>KULLANICI ADI</label>
                    <input type="text" name="KULLANICI" class="form-control" />
                    <br />
                    <label>ŞİFRE</label>
                    <input type="password" name="SIFRE" class="form-control" />
                    <br />
                    <label>YETKİ</label>
                    <input type="text" name="YETKI" class="form-control" />
                    <br />
                    <button class="btn btn-info">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>


<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
        }
    });
</script>