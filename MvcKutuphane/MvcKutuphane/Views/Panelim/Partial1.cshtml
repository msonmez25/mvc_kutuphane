@using MvcKutuphane.Models.Entity
@model List<Tbl_Duyuru>

@{ string renk = "";}

@foreach (var x in Model)
{
    if (x.KATEGORI == "Kitapları Geciktirmeyin")
    { renk = "#e67e22"; }
    if (x.KATEGORI == "Dikkat")
    { renk = "#c0392b"; }
    if (x.KATEGORI == "İletişim")
    { renk = "#27ae60 "; }
    if (x.KATEGORI == "Yeni Kitap")
    { renk = "#9b59b6 "; }
    if (x.KATEGORI == "Bilgilendirme")
    { renk = "#2c3e50 "; }

    <div class="post">
        <div class="user-block">
            <img class="img-circle img-bordered-sm" src="~/AdminLTE-3.0.4/dist/img/duyuru.png" alt="user image" />
            <span class="username">
                <a href="#" style="color:@renk">@x.KATEGORI</a>
                <a href="#" class="float-right btn-tool"><i class="fas -fa-times"></i></a>
            </span>
            <span class="description">@Convert.ToDateTime(x.ILANTARIH).ToString("dd/MM/yyyy")</span>
        </div>

        <p>
            @x.ICERIK
        </p>
    </div>
}
