@model MvcKutuphane.Models.Entity.Tbl_Yazar
@{
    ViewBag.Title = "YazarGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>YAZAR BİLGİ GÜNCELLEME SAYFASI</h2>

@using (Html.BeginForm("YazarGuncelle", "Yazar", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @*@Html.LabelFor(y => k.AD)*@
        <label>YAZAR ADI</label>
        @Html.TextBoxFor(y => y.AD, new { @class = "form-control" })
    </div>
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <label>YAZAR SOYADI</label>
        @Html.TextBoxFor(y => y.SOYAD, new { @class = "form-control" })
    </div>
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <label>YAZAR DETAY BİLGİLER</label>
        @Html.TextAreaFor(y => y.DETAY, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(y => y.ID)
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}

