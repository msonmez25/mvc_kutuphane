@using MvcKutuphane.Models.Entity
@model List<Tbl_Yazar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>TÜM YAZARLAR SAYFASI</h2>

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr style="background-color: #e67e22">
            <th>YAZAR ID</th>
            <th>YAZAR AD</th>
            <th>YAZAR SOYAD</th>
            <th>YAZAR DETAY</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
            <th>YAZARA AİT KİTAPLAR</th>
        </tr>
    </thead>
    @foreach (var yzr in Model)
    {
        <tr>
            <td>@yzr.ID</td>
            <td>@yzr.AD</td>
            <td>@yzr.SOYAD</td>
            <td>@yzr.DETAY</td>

            @*Silme işlemini alert ile yapmak için*@
            <td>
                @Html.ActionLink("Sil", "YazarSil",
           new { id = yzr.ID },
           new
                    {
                        @class = "btn btn-danger",
           onclick = "return confirm('Silmek İstiyor musunuz?')"
                    })
            </td>
            <td><a href="/Yazar/YazarGetir/@yzr.ID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Yazar/YazarKitaplar/@yzr.ID" class="btn btn-success" style="background-color:cadetblue">Yazarın Kitapları</a></td>
        </tr>
    }

</table>
<a href="/Yazar/YazarEkle/" class="btn btn-primary">Yeni Yazar Ekle</a>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Turkish.json"
        }
    });
</script>
